---
export interface Props {
  titulo: string,
  contenido: string,
  imagen: string,
}

const { titulo, contenido, imagen } = Astro.props

const backgroundImage = `url(${imagen})`
---


<section class="curso">
  <div class="contenedor grid">
    <div class="contenido">
      <div class="heading">{titulo}</div>
      <p>{contenido}</p>
    </div>
  </div>
</section>

